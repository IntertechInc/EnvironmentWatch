@model EnvironmentWatch.Models.LocationHandler

@{ ViewData["Title"] = "Add Location"; }

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.LocationName)
        @Html.TextBoxFor(m => m.LocationName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LocationDesc)
        @Html.TextBoxFor(m => m.LocationDesc, new { @class = "form-control" })
    </div>
    <div class="form-check">
        <div class="er"></div>
        @if (!Model.Success && !string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-danger">@Model.Message</div>
        }
        else
        {
            <div class="alert"><br /></div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
